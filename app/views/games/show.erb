<section id='show-game-controls'>
<h2><%= @game.title %></h2>
<h3>This game is for: <%= @game.topic_name %></h3>
<p>Copy this link, and send it to <%= @game.responder_name %> so they can answer the questions about <%= @game.topic_name %>!</p>
<a href='/games/<%= @game.id %>/<%= @game.url_key %>'>localhost:9393/games/<%= @game.id %>/<%= @game.url_key %></a>

<form action='/games/<%= @game.id %>' method='post' id='delete-game'>
  <input type='hidden' name='_method' value='delete'>
  <input type='submit' name='delete' value='Delete'>
</form>

<form action='/games/<%= @game.id %>/edit' method='get' id='edit-game'>
  <input type='submit' name='edit' value='Edit'>
</form>
</section>

<form action='/games/<%= @game.id %>/play' method='get' id='edit-game'>
  <input type='submit' name='show' value='Play!'>
</form>
</section>